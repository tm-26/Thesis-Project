[{"abstract": "Henry M. Paulson, the former Treasury chief, plans to defend his statement to the Bank of America chairman that abandoning a Merrill Lynch deal could cost his job.", "web_url": "https://www.nytimes.com/2009/07/16/business/16paulson.html", "snippet": "Henry M. Paulson, the former Treasury chief, plans to defend his statement to the Bank of America chairman that abandoning a Merrill Lynch deal could cost his job.", "lead_paragraph": "Representative Edolphus Towns, Democrat of New York, demanded to know last month \u201cwho was holding the shotgun\u201d that forced Bank of America into a hastily arranged marriage with the struggling Wall Street giant Merrill Lynch.", "print_section": "B", "print_page": "3", "source": "The New York Times", "multimedia": [{"rank": 0, "subtype": "xlarge", "caption": null, "credit": null, "type": "image", "url": "images/2009/07/16/business/paulson_span.jpg", "height": 350, "width": 600, "subType": "xlarge", "crop_name": "articleLarge", "legacy": {"xlarge": "images/2009/07/16/business/paulson_span.jpg", "xlargewidth": 600, "xlargeheight": 350}}, {"rank": 0, "subtype": "thumbnail", "caption": null, "credit": null, "type": "image", "url": "images/2009/07/16/business/paulson75.jpg", "height": 75, "width": 75, "subType": "thumbnail", "crop_name": "thumbStandard", "legacy": {"thumbnail": "images/2009/07/16/business/paulson75.jpg", "thumbnailwidth": 75, "thumbnailheight": 75}}], "headline": {"main": "Paulson Expected to Face Hard Questioning on Merrill Deal", "kicker": null, "content_kicker": null, "print_headline": "Paulson Expected to Face Hard Questioning on Merrill Deal", "name": null, "seo": null, "sub": null}, "keywords": [{"name": "subject", "value": "Mergers, Acquisitions and Divestitures", "rank": 1, "major": "N"}, {"name": "organizations", "value": "Bank of America Corp", "rank": 2, "major": "N"}, {"name": "persons", "value": "Paulson, Henry M Jr", "rank": 3, "major": "N"}, {"name": "subject", "value": "United States Poli